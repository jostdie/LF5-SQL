DROP DATABASE IF EXISTS `KrautUndRueben`;
CREATE DATABASE `KrautUndRueben`;

CREATE TABLE `KrautUndRueben`.`Kunde` (`KundenNr` INT NOT NULL , `Name` TEXT NOT NULL , `Email` TEXT NOT NULL , `Geburtsdatum` DATE NOT NULL , `Telefon` VARCHAR(20) NOT NULL , PRIMARY KEY (`KundenNr`) )ENGINE = InnoDB;
                                       
CREATE TABLE `KrautUndRueben`.`Adresse` (`Adress-ID` INT NOT NULL AUTO_INCREMENT , `LieferantenNr` INT NULL , `Strasse` TEXT NOT NULL , `Hausnummer` VARCHAR(9) NOT NULL, PRIMARY KEY (`Adress-ID`) ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Ort` (`Ort-ID` INT NOT NULL AUTO_INCREMENT , `Adress-ID` INT NOT NULL ,`PLZ` VARCHAR(5) NOT NULL , `Stadt` TEXT NOT NULL, PRIMARY KEY (`Ort-ID`) ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Lieferant` (`LieferantenNr` INT NOT NULL , `Name` TEXT NOT NULL , `Telefon` VARCHAR(20) NOT NULL , `Email`TEXT NOT NULL , PRIMARY KEY (`LieferantenNr`) ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Bestellung` (`BestellNr` INT NOT NULL , `KundenNr`INT NOT NULL , `Bestelldatum` DATE NOT NULL , `Rechnungsbetrag` DECIMAL(5,2) NOT NULL , WAEHRUNG VARCHAR(3) DEFAULT 'EUR' , PRIMARY KEY (`BestellNr`) ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Zutat` (`ZutatNr` INT NOT NULL , `BEZEICHNUNG` TEXT NOT NULL , `Mengeneinheit` TEXT NOT NULL , `Nettopreis` DECIMAL NOT NULL , `Bruttopreis` DECIMAL NOT NULL , `Bestand` VARCHAR(5) NOT NULL , `CO2-Emission` DECIMAL(10) NOT NULL , PRIMARY KEY (`ZutatNr`) ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Ernaehrungskategorien` (`KategorieNr` INT NOT NULL , `Bezeichnung` TEXT NOT NULL, PRIMARY KEY (`KategorieNr`) ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Allergene` (`AllergenNr` INT NOT NULL , `Allergen` TEXT NOT NULL, PRIMARY KEY (`AllergenNr`) ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Naehrstoffangaben` (`NaehrstoffNr` INT NOT NULL , `Naehrstoffangaben` TEXT DEFAULT 'pro 100g' , `Kalorien` VARCHAR(20) NOT NULL , `Protein` DECIMAL(4,2) NOT NULL, `Kohlenhydrate` DECIMAL(4,2) NOT NULL, `- davon Zucker` DECIMAL(4,2) NOT NULL, `Fett`DECIMAL(4,2) NOT NULL, `- davon gesättigte Fettsäuren` DECIMAL(4,2) NOT NULL, `Ballaststoffe` DECIMAL(4,2) NOT NULL, `Natrium` DECIMAL(4,2) NOT NULL,  PRIMARY KEY(`NaehrstoffNr`) ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Rezept` (`RezeptNr` INT NOT NULL , `Rezept` TEXT NOT NULL , `CO2-Emission` DECIMAL(10) , PRIMARY KEY(`RezeptNr`) ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Bestellung-Zutat` (`BestellNr` INT NOT NULL , `ZutatNr` INT NOT NULL , `Menge` DECIMAL NOT NULL ) ENGINE = InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Zutat-Ernaehrungskategorie` (`ZutatNr` int(11) NOT NULL , `KategorieNr` int(11) NOT NULL) ENGINE=InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Zutat-Lieferant` (`ZutatNr` int(11) NOT NULL , `LieferantenNr` int(11) NOT NULL , `Einkaufspreis` decimal(10,2) NOT NULL , `Datum` date NOT NULL) ENGINE=InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Zutat-Naehrstoffangaben` (`ZutatNr` int(11) NOT NULL , `NaehrstoffNr` int(11) NOT NULL) ENGINE=InnoDB;
                                         
CREATE TABLE `KrautUndRueben`.`Zutat-Rezept` (`ZutatNr` int(11) NOT NULL , `RezeptNr` int(11) NOT NULL , `Menge` decimal(10,2) NOT NULL) ENGINE=InnoDB;

CREATE TABLE `KrautUndRueben`.`Zutat-Allergene` (`ZutatNr` int(11) NOT NULL , `AllergenNr` int(11) NOT NULL) ENGINE=InnoDB;

CREATE TABLE `KrautUndRueben`.`Kunde-Adresse` (`KundenNr`int(11) NOT NULL , `Adress-ID` int (11) NOT NULL) ENGINE=InnoDB;