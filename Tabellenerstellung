CREATE TABLE `KrautUndRueben`.`Kunde` (`KundenNr` INT NOT NULL , `Name` TEXT NOT NULL , `Email` TEXT NOT NULL , `Geburtsdatum` DATE NOT NULL , `Telefon` INT NOT NULL ) ENGINE = InnoDB;
CREATE TABLE `KrautUndRueben`.`Adresse` (`ID` INT NOT NULL , `KundenNr` INT NULL , `LieferantenNr` INT NULL , `Strasse` TEXT NOT NULL , `Hausnummer` INT NOT NULL ) ENGINE = InnoDB;
CREATE TABLE `KrautUndRueben`.`Ort` (`ID` INT NOT NULL , `PLZ` VARCHAR(5) NOT NULL , `Stadt` TEXT NOT NULL ) ENGINE = InnoDB;
CREATE TABLE `KrautUndRueben`.`Lieferant` (`LieferantenNr` INT NOT NULL , `Name` TEXT NOT NULL ) ENGINE = InnoDB;
CREATE TABLE `KrautUndRueben`.`Bestellung` (`BestellNr` INT NOT NULL , `Gesamtpreis` DECIMAL(5) NOT NULL , `Datum` DATE NOT NULL ) ENGINE = InnoDB;
CREATE TABLE `KrautUndRueben`.`Zutat` (`ZutatNr` INT NOT NULL , `Zutat-Name` TEXT NOT NULL , `Mengeneinheit` TEXT NOT NULL , `Nettopreis` DECIMAL NOT NULL , `Bestand` VARCHAR(5) NOT NULL ) ENGINE = InnoDB;
CREATE TABLE `KrautUndRueben`.`Ernährungskategorien` (`KategorieNr` INT NOT NULL , `Bezeichnung` TEXT NOT NULL ) ENGINE = InnoDB;
CREATE TABLE `KrautUndRueben`.`Allergene` (`AllergenNr` INT NOT NULL , `Allergen` TEXT NOT NULL ) ENGINE = InnoDB;
CREATE TABLE `KrautUndRueben`.`Nährstoffangaben` (`NährstoffNr` INT NOT NULL , `Bezeichnung` TEXT NOT NULL , `Mengenangabe` VARCHAR(5) NOT NULL , `Mengeneinheit` TEXT NOT NULL ) ENGINE = InnoDB;
CREATE TABLE `KrautUndRueben`.`Rezept` (`RezeptNr` INT NOT NULL , `Rezept` TEXT NOT NULL , `ZutatNr` INT NOT NULL ) ENGINE = InnoDB;